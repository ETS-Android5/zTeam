<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >

    <androidx.cardview.widget.CardView
        android:id="@+id/category_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        app:cardBackgroundColor="#0A0212">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect_standard"
            >
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/category_image"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"></ImageView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/category_image"
                android:fontFamily="@font/khula_normal"
                android:text="Action"
                android:textAppearance="@style/zteam"
                android:textSize="@dimen/_13sdp"></TextView>

            <TextView
                android:id="@+id/category_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_label"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_minus2sdp"
                android:layout_toRightOf="@+id/category_image"
                android:fontFamily="@font/khula_normal"
                android:text="An action game is a video game genre that emphasizes physical challenges, including handâ€“eye coordination and reaction-time"
                android:textAppearance="@style/zteam"
                android:textColor="#A19D9D"
                android:textSize="@dimen/_8sdp"></TextView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>