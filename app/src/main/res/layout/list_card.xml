<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#0A0212"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/genre_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        app:cardBackgroundColor="#0A0212"
        app:cardElevation="10dp">

        <View
            android:id="@+id/game_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_effect_action"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/category_image"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15sdp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    android:transitionName="game_icon_transition"></ImageView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_37sdp"
                android:layout_toRightOf="@+id/category_image"
                android:fontFamily="@font/khula_normal"
                android:text=""
                android:textAppearance="@style/zteam"
                android:textSize="@dimen/_15sdp"></TextView>

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_label"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/category_image"
                android:fontFamily="@font/khula_normal"
                android:text="4.5"
                android:textColor="#A19D9D"
                android:textSize="@dimen/_11sdp"></TextView>

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_label"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/rating"
                android:fontFamily="@font/khula_normal"
                android:text="1.9 GB"
                android:textColor="#A19D9D"
                android:textSize="@dimen/_11sdp"></TextView>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_61sdp"
                android:layout_marginLeft="@dimen/_117sdp"
                app:srcCompat="@drawable/ic_heroicons_outline_star" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>