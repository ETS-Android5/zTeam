<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        app:cardBackgroundColor="#0A0212"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect_standard">

            <androidx.cardview.widget.CardView
                android:id="@+id/category_image"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15sdp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:transitionName="game_icon_transition"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"></ImageView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_37sdp"
                android:layout_toRightOf="@+id/category_image"
                android:fontFamily="@style/zteam"
                android:text=""
                android:textAppearance="@style/zteam"
                android:textSize="@dimen/_15sdp"></TextView>

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_name"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/category_image"
                android:text="4.5"
                android:textAppearance="@style/zteam"
                android:textColor="#A19D9D"
                android:textSize="@dimen/_11sdp"></TextView>

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_name"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/rating"
                android:text="1.9"
                android:textAppearance="@style/zteam"
                android:textColor="#A19D9D"
                android:textSize="@dimen/_11sdp"></TextView>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_below="@id/search_name"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toRightOf="@id/rating"
                app:srcCompat="@drawable/ic_heroicons_outline_star" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>